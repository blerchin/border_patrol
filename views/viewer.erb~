 <script>
 //if browser supports HLS, load that stream
	
	function set_viewer_size() {
		$viewer = $('div#border-patrol');
		$win = $(window);
		var h = ( $win.width() * .58 ); 
		$viewer.height( h );
	}
	$(window).resize(function(){
			set_viewer_size();
		});
//if we are not on mobile, set position in JS
	if( !(/iPhone|iPod|iPad|Android/).test(navigator.userAgent) ){
	  console.log('HLS Not Supported');
    _V_("border-patrol").ready( function(){
	   set_viewer_size();
     this.play();
   });
   var bpPlayer = _V_("border-patrol");
    bpPlayer.addEvent("durationchange", function() {
      console.log('duration: ' + this.duration() );
      console.log(this.currentTime());
      this.currentTime(4000);

    });
   bpPlayer.addEvent("loadeddata", function(){
     bpPlayer.currentTime(4000);
     bpPlayer.play();
     
    });
	}
